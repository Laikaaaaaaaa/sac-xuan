# OpenAI (poem generation)
OPENAI_API_KEY=
OPENAI_TEXT_MODEL=gpt-4o-mini

# Image provider: set to stability (VN->EN via OpenAI) / openai / gemini
IMAGE_PROVIDER=stability

# OpenAI (used for poem generation and for translating Stability prompts)
# Optional: override translation model (defaults to OPENAI_TEXT_MODEL)
OPENAI_TRANSLATE_MODEL=gpt-4o-mini

# OpenAI (direct image generation) - optional
OPENAI_IMAGE_MODEL=gpt-image-1
OPENAI_IMAGE_SIZE=1024x1024

# Stability AI (image generation)
STABILITY_API_KEY=
# Optional (used by Stability v1 fallback)
# STABILITY_ENGINE=stable-diffusion-xl-1024-v1-0
# Optional tuning
# STABILITY_STEPS=30
# STABILITY_CFG_SCALE=7
# Optional: force aspect ratio (otherwise derived from OPENAI_IMAGE_SIZE)
# STABILITY_ASPECT_RATIO=1:1

# Gemini / Google AI Studio (image generation) - optional
# Use either GEMINI_API_KEY or GOOGLE_API_KEY
GEMINI_API_KEY=
# GOOGLE_API_KEY=

# Imagen model name (default used by app if empty)
GEMINI_IMAGE_MODEL=imagen-3.0-generate-001

# Optional: force aspect ratio (otherwise derived from OPENAI_IMAGE_SIZE)
# GEMINI_IMAGE_ASPECT_RATIO=1:1

# (OPENAI_IMAGE_SIZE also used to derive aspect ratio for other providers)
